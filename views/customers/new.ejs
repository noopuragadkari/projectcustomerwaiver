<h2 class="h1Index">Waiver Form</h2>
<form action="/customers" method="POST">
  <div class="row marginTop">
    <div class="col-6">
      <label class="form-label">First Name</label>
      <input type="name" class="form-control" name="first"  placeholder="Enter First Name" required>
    </div>
    <div class="col-6">
      <label class="form-label">Last Name</label>
      <input type="name" class="form-control" name="last"  placeholder="Enter Last Name" required>
    </div>
  </div>
  <div class="row marginTop">
    <div class="col-6">
      <label class="form-label">Phone number</label>
      <input type="name" class="form-control" name="phone"  placeholder="Enter Phone number" maxlength="10" pattern="\d{10}" title="Please enter exactly 10 digits" required>
    </div>
    <div class="col-6">
      <label class="form-label">Email ID</label>
      <input type="name" class="form-control" name="email"  placeholder="Enter Email Id" required>
    </div>
  </div>
  <div class="row marginTop">
    <div class="col-6">
        <select class="form-select" name="waiver"  required>
          <option value="">Select waiver</option>
          <option value="Spa">Spa</option>
          <option value="Golf">Golf</option>
          <option value="Casino">Casino</option>
        </select>
    </div>
  </div>
  <div class="row marginTop">
    <div class="col-6">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="consent" value="âœ”" required>
            <label class="form-check-label" for="flexCheckDefault">
                I agree to the following terms and conditions. 
            </label>
        </div>
    </div>
  </div>
  <div class="col-6 marginTop">
    <button type="submit" class="btn btn-primary">I Agree</button>
  </div>
</form>
</body>
