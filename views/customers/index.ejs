<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Customer Data</title>
</head>
<body>
    <nav class="navbar navbar-light navbar-expand-lg fixed-top shadow-sm bg-white"><a class="navbar-brand"></a>
        <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"><span class="navbar-toggler-icon"></span></button>
        <div id="navbarSupportedContent" class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a href="/customers" class="nav-link">ALL DATA</a></li>
                <li class="nav-item"><a href="/customers/new" class="nav-link">ADD WAIVER</a></li>
            </ul>
        </div>
    </nav>
    <h1 class="h1Index">CUSTOMER DETAILS</h1>
    <table class="table table-striped marginTop">
        <thead class="thead-dark">
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Phone number</th>
            <th scope="col">Email ID</th>
            <th scope="col">Consent</th>
            <th scope="col">Action</th>
        </thead>
        <tbody>
        <% students.forEach(student => { %>
            <tr>
                <td><%= student.fname %></td>
                <td><%= student.lname %></td>
                <td><%= student.phone %></td>
                <td><%= student.emailid %></td>
                <td><%= student.consent %></td>
                <td>
                    <a href="/customers/edit/<%= student._id %>" class="btn btn-outline-primary btn-sm" role="button">UPDATE</a>
                    <a href="/customers/delete/<%= student._id %>" class="btn btn-outline-danger btn-sm" role="button">DELETE</a>        
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    </body>
</html>